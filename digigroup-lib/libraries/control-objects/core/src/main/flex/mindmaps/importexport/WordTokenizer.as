package mindmaps.importexport {

	public class WordTokenizer {

		private static const stringTokenizer:StringTokenizer = new StringTokenizer();

		private static const wordDelimiter:RegExp = /[\s\W]/;

		public function WordTokenizer() {
		}

		public function getWords(value:String):Array {
			return stringTokenizer.tokenize(value, wordDelimiter);
		}
	}
}
